<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.myhotel.admin.room.RoomsController">
	<children>
		<VBox>
			<children>
				<Button mnemonicParsing="false" text="New Room"
					fx:id="newRoomBtn" onAction="#onNewRoom">
					<VBox.margin>
						<Insets left="10.0" right="5.0" bottom="5.0" />
					</VBox.margin>
				</Button>

				<TableView fx:id="roomTableView"
					tableMenuButtonVisible="true">
					<columns>
						<TableColumn fx:id="colRoomNumber" maxWidth="4000.0"
							prefWidth="75.0" text="Room No" />
						<TableColumn fx:id="colPrice" maxWidth="4000.0"
							prefWidth="75.0" text="Price" />
						<TableColumn fx:id="colBedType" maxWidth="4000.0"
							prefWidth="75.0" text="Bed Type" />
						<TableColumn fx:id="colAdults" maxWidth="4000.0"
							prefWidth="75.0" text="Adults" />
						<TableColumn fx:id="colChildren" maxWidth="4000.0"
							prefWidth="60.0" text="Children" />
						<TableColumn fx:id="colRoomType" maxWidth="4000.0"
							prefWidth="75.0" text="Room Type" />
						<TableColumn fx:id="colStatus" maxWidth="4000.0"
							prefWidth="75.0" text="Status" />
						<TableColumn fx:id="colTax" maxWidth="3500.0"
							prefWidth="75.0" text="Tax" />
					</columns>
					<VBox.margin>
						<Insets left="10.0" right="5.0" />
					</VBox.margin>
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>

				</TableView>

			</children>
		</VBox>
	</children>
</AnchorPane>
